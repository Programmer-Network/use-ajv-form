{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "vitest", "node", "jest", "@testing-library/jest-dom"],
    "baseUrl": "./src",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["build", "node_modules", "storybook-static"]
}
